<Window x:Class="ReproductorVideo.VentanaListas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VentanaListas" Height="338" Width="214">
    <Grid>
        <Button x:Name="BtnCrear" Content="Crear" HorizontalAlignment="Left" Margin="62,94,0,0" VerticalAlignment="Top" Width="75" Click="BtnCrear_Click"/>
        <Label Content="Nombre lista" HorizontalAlignment="Left" Margin="10,47,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TxtNombreLista" HorizontalAlignment="Left" Height="23" Margin="94,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="89"/>
        <Label Content="Crear lista de reproduccion" HorizontalAlignment="Left" Margin="23,10,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="LstListasRExistentes" HorizontalAlignment="Left" Height="100" Margin="35,163,0,0" VerticalAlignment="Top" Width="135"/>
        <Label Content="Listas de reproduccion existentes" HorizontalAlignment="Left" Margin="10,132,0,0" VerticalAlignment="Top"/>
        <Button x:Name="BtnBorrarLista" Content="Borrar lista seleccionada" HorizontalAlignment="Left" Margin="35,276,0,0" VerticalAlignment="Top" Width="135" Click="BtnBorrarLista_Click"/>

    </Grid>
</Window>
